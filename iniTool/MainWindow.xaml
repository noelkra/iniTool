<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iniTool"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="iniTool.MainWindow"
        mc:Ignorable="d"
        Title="iniTool" Height="500" Width="1042.667" Icon="img/master.png" WindowStartupLocation="CenterScreen" MinHeight="500" MinWidth="700" Loaded="Window_Loaded">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo Description="iniTool"/>
    </Window.TaskbarItemInfo>
    <Grid Margin="0,0,3.333,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="stSidebar" Grid.Column="0" Background="{DynamicResource primary.turquoise}" Height="auto">
            <StackPanel.Effect>
                <DropShadowEffect Direction="0" BlurRadius="4" ShadowDepth="3" Color="#FF9D9D9D"/>
            </StackPanel.Effect>
            <Button x:Name="btnMain" Height="{Binding ActualWidth, ElementName=btnMain}" Width="Auto" BorderBrush="{x:Null}" Foreground="{x:Null}" Style="{DynamicResource FlatUIMenuButton}" Click="BtnMain_Click">
                <Button.Background>
                    <ImageBrush ImageSource="img/icons8-home-1024.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="btnOpenNewWorkspace" Height="{Binding ActualWidth, ElementName=btnOpenNewWorkspace}" Style="{DynamicResource FlatUIMenuButton}" Width="Auto" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="BtnOpenNewWorkspace_Click">
                <Button.Background>
                    <ImageBrush ImageSource="img/icons8-opened-folder-1024.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="btnSettings" Height="{Binding ActualWidth, ElementName=btnSettings}" Style="{DynamicResource FlatUIMenuButton}" Width="Auto" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="BtnSettings_Click">
                <Button.Background>
                    <ImageBrush ImageSource="img/icons8-services-1024.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="btnAbout" Height="{Binding ActualWidth, ElementName=btnAbout}" Style="{DynamicResource FlatUIMenuButton}" Width="Auto" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="BtnAbout_Click">
                <Button.Background>
                    <ImageBrush ImageSource="img/icons8-about-1024.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
        <local:SettingsUserControl x:Name="ucSettings" Grid.Column="1" Margin="0,0,0,0" Visibility="Hidden"/>
        <local:MainUserControl x:Name="ucMain" Grid.Column="1" Height="Auto"/>
        <local:AboutUserControl x:Name="ucAbout" Grid.Column="1" Height="Auto" Visibility="Hidden"/>
    </Grid>
</Window>
